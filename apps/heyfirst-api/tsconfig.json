{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "@/modules/*": ["modules/*"],
      "@/services/*": ["services/*"]
    },
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "files": true
  }
}
